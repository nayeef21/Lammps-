####----------TENSILE TEST of Ni2Cr in X direction[100]---------####

# ------------------------ INITIALIZATION ----------------------------
units 		metal
dimension	3
boundary	p   p	p
atom_style	atomic

# ----------------------- ATOM DEFINITION ----------------------------
read_data        alloy.lmp 

# ------------------------ FORCE FIELDS ------------------------------

pair_style   meam
pair_coeff	 * * library.meam Ni Cr NiCr.meam Ni Cr

#velocity       all      create 300 4928459 mom yes rot yes dist gaussian units box

# ------------------------- SETTINGS ---------------------------------
compute    1 all stress/atom NULL
compute    2 all reduce sum c_1[1] c_1[2] c_1[3]
compute csym all centro/atom fcc
compute peratom all pe/atom 
######################################


# Store final cell length for strain calculations

variable tmp equal 32.4522 #x2-x1 for relaxed file 
variable L0 equal ${tmp}
print "Initial Length, L0: ${L0}"

######################################
# DEFORMATION in X-direction
 
reset_timestep	0
timestep 0.001

fix		1 all npt temp 300 300 1 y 0 0 1 z 0 0 1 drag 1 
variable srate equal 1.0e10
variable srate1 equal "v_srate / 1.0e12"   #tension
fix		2 all deform 1 x erate ${srate1} units box remap x

# Output strain and stress info to file
# For units metal, pressure is in [bars] = 100 [kPa] = 1/10000 [GPa]
# p2, p3, p4 are in GPa
variable strain equal "(lx - v_L0)/v_L0"
variable p1 equal "v_strain"
variable p2 equal "-pxx/10000"
variable p3 equal "-pyy/10000"
variable p4 equal "-pzz/10000"
fix def1 all print 100 "${p1} ${p2} ${p3} ${p4}" file alloy.x.txt screen no

# For atomic structure inspection
dump       1 all atom 250 dump.final


# Display thermo
thermo 	100
thermo_style	custom step v_strain v_p2 v_p3 v_p4 etotal press

run	   500000

# SIMULATION DONE
print "All done"

